{% extends 'base.html.twig' %}

{% block title %}List of PharmacyTypes{% endblock %}

{% block body %}
    <h1>List of PharmacyTypes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacy_type in pharmacy_types %}
            <tr>
                <td>{{ pharmacy_type.id }}</td>
                <td>{{ pharmacy_type.name }}</td>
                <td>
                    <a href="{{ path('app_pharmacy_type_show', {'id': pharmacy_type.id}) }}">show</a>
                    <a href="{{ path('app_pharmacy_type_edit', {'id': pharmacy_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pharmacy_type_new') }}">Create new</a>
{% endblock %}
